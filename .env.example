# PROJECT LUMEN - Environment Configuration Example
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=PROJECT LUMEN
DEBUG=True

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# LLM Configuration
LLM_PROVIDER=ollama
# Options: openai, gemini, ollama

LLM_MODEL=lllama3.1:8b
# Ollama models: lllama3.1:8b, mistral:7b-instruct
# OpenAI models: gpt-3.5-turbo, gpt-4
# Gemini models: gemini-pro

# Ollama Configuration (for local LLM on GPU server)
OLLAMA_BASE_URL=http://192.168.1.100:11434
# Change to your GPU computer's IP address
# If running on same machine, use http://localhost:11434

OLLAMA_MODEL=lllama3.1:8b

# Cloud API Keys (optional, only if using openai or gemini provider)
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# LLM Parameters
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000

# RAG Configuration
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
RERANKER_MODEL=castorini/monot5-base-msmarco

CHUNK_SIZE=500
CHUNK_OVERLAP=50

DENSE_TOP_K=50
SPARSE_TOP_K=30
RERANK_TOP_K=5

# Agent Configuration
AUDIT_THRESHOLD=0.15
FRAUD_ZSCORE_THRESHOLD=3.0
COMPLIANCE_CONFIDENCE=0.7

# Upload Settings
MAX_UPLOAD_SIZE=10485760
# 10MB in bytes

# SendGrid Email Configuration (for scheduled reports)
SENDGRID_API_KEY=your_sendgrid_api_key_here
# Get your API key from https://sendgrid.com/
SENDGRID_FROM_EMAIL=noreply@projectlumen.ai
SENDGRID_FROM_NAME=Project Lumen Financial Reports

# Scheduled Report Configuration
SCHEDULED_REPORTS_ENABLED=True
# Set to False to disable automated scheduled reports
DEFAULT_REPORT_SCHEDULE=weekly
# Options: weekly, monthly
REPORT_GENERATION_DAY=1
# Day of week for weekly reports (0=Monday, 6=Sunday)
# For monthly reports, this is day of month (1-28)
REPORT_GENERATION_HOUR=8
# Hour of day in 24-hour format (0-23) for report generation

# MongoDB Configuration (optional)
MONGO_URI=mongodb://localhost:27017/project_lumen
# Required for storing receipts and financial data
# If not set, will use file-based storage

# Logging
LOG_LEVEL=INFO
